<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td style="width: 50%;"><%= room.name %></td>
        <td><%= link_to 'Show', room, class: 'btn' %></td>
        <td><%= link_to 'Edit', edit_room_path(room), class: 'btn' %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn pink' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path, class: 'btn' %>
